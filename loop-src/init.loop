module ribbon.init

require `org.yaml.snakeyaml.Yaml`

quit() ->
  print('Usage: ribbon init <project_name> \n'),
  exit(1)

validate(args) ->
  if args.size() < 2 then quit() else Nothing

write_yaml(args) ->
  yaml.dump(project).print()
  where
    yaml: new Yaml()
    project: { @name: args[1], @deps: [] }


main(args) ->
  validate(args),
  write_yaml(args)